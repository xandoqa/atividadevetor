#include <stdio.h>

int main() {
    float vetor[10];
    int qtdNegativos = 0;
    float somaPositivos = 0;

    for (int i = 0; i < 10; i++) {
        scanf("%f", &vetor[i]);
        if (vetor[i] < 0) {
            qtdNegativos++;
        } else {
            somaPositivos += vetor[i];
        }
    }

    printf("Quantidade de números negativos: %d\n", qtdNegativos);
    printf("Soma dos números positivos: %.2f\n", somaPositivos);

    return 0;
}
